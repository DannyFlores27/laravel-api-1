			"name": "3. Crear Cliente",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    var jsonData = pm.response.json();",
							"    pm.environment.set(\"client_id\", jsonData.data.id);",
							"}"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"María García\",\n    \"email\": \"maria@example.com\",\n    \"phone\": \"987654321\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/clients",
					"host": ["{{base_url}}"],
					"path": ["clients"]
				}
			}
		},
